<% if @notifications.empty? %>
  <h3>No notifications yet...</h3>
<% else %>
  <table>
    <thead>
      <tr>
        <td><strong>From</strong></td>
        <td><strong>To</strong></td>
        <td><strong>Message</strong></td>
        <td><strong>Type</strong></td>
      </tr>
    </thead>
    <% @notifications.each do |n| %>
    <tr>
      <td><%= n.from_number %></td>
      <td><%= n.to_number %></td>
      <td><%= n.message %></td>
      <td><%= Notification::NOTIFICATION_TYPES.invert[n.notification_type] %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<%= link_to "Contact Someone!", new_notification_path %>